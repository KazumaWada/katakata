<%= button_to "←", root_path, method: :get %>


<%= form_with(model: @micropost, url: update_micropost_path(id: @micropost.id), method: :patch, local: true, html: { class: "micropost-form" }) do |f| %>
  
 
  
    <div class="m-2 text-center">
      <%= f.text_area :content, size: "100x10", class: "text-xl text-gray-700 font-medium focus:outline-none focus:ring-0" %>
    </div>
  
    <!-- 変更を保存するボタンの右寄せ -->
    <div class="flex justify-end m-8">
      <%= f.submit "変更を保存する", class: "bg-gray-700 hover:bg-gray-800 text-white py-2 px-4 rounded" %>
    </div>
  
<% end %>
